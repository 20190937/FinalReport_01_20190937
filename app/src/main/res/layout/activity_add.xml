<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도서 추가"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/add_image"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="도서명" />

            <EditText
                android:id="@+id/add_et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="도서 이름을 입력하세요"
                android:inputType="none" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저자" />

            <EditText
                android:id="@+id/add_et_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="저자를 입력하세요"
                android:inputType="none"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="170dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출판사" />

            <EditText
                android:id="@+id/add_et_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="출판사를 입력하세요"
                android:inputType="none"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="266dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내용 요약"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="121dp" />

            <EditText
                android:id="@+id/add_et_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="내용 요약을 입력하세요"
                android:inputType="none"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="311dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="읽은 날짜"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="356dp" />

            <DatePicker
                android:id="@+id/add_datepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="371dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_btn_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="addOnClick"
                    android:text="추가" />

                <Button
                    android:id="@+id/add_btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="addOnClick"
                    android:text="취소" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>